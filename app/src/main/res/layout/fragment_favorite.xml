<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00a67a"
    tools:context=".fragment.FavoriteFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_top_thankyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thankyou_top_image"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/text_order_thankyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thankyou_for_ordering"
        android:layout_below="@id/image_top_thankyou"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/thankyou_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/flower_valley_logo"
        android:layout_below="@+id/text_order_thankyou"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thankyou_logo"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"/>

  



</RelativeLayout>