<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="150dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="18dp"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/flower_image"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_item_flower" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/single_line"
            android:layout_below="@id/flower_image"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"

            android:background="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/flower_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/single_line"
            android:layout_marginLeft="10dp"

            android:text="Angle"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/flower_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flower_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="â‚¹576.00"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/single_line"
            android:layout_marginStart="95dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_add" />


    </RelativeLayout></androidx.cardview.widget.CardView>